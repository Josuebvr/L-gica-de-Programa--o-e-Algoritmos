Algoritmo "Exercicio 3"
// Disciplina   : Lógica de Programação
// Professora   : Sandra

Var

   num:inteiro

Inicio

   escreva("Digite o número")
   leia(num)
   se (num %2)= 0 entao
      escreval("O número é par")
   senao
      escreval("O número é impar")
   fimse
   se(num>=0) entao
      escreval("O número é positivo")
   senao
      escreval("O número é negativo")
   fimse

Fimalgoritmo